# Parse flags and options
flags=()

for arg in "${@:1:$#-1}"; do
    case $arg in
        -sb|-D|-ps|-r|-fresh|-h|-js|-check)
            flags+=("$arg")
            ;;
        *)
            usage
            exit 1
            ;;
    esac
done

# Handle the parsed flags and options
for flag in "${flags[@]}"; do
    case $flag in
        -sb)
            subdomain_enum
            ;;
        -D)
            dir_bruteforce
            ;;
        -ps)
            port_scan
            ;;
        -r)
            resolve_subdomains
            ;;
        -fresh)
            fresh_up
            ;;
        -js)
            javascript
            ;;
        -check)
            check
            ;;
    esac
done

